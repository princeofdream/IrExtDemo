<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vstech.jamesl.irextdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_get_ir_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_get_ir_stat"
            />

        <Button
            android:id="@+id/btn_input_ir_ext_key_once"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_input_ir_ext_key_once"
            />

        <Button
            android:id="@+id/btn_input_ir_ext_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_input_ir_ext_key"
            />

        <TextView
            android:id="@+id/ir_stat_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="99dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
